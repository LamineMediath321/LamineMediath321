{% extends 'layouts/base.html.twig' %}


{% block title %}
Réinitialisez votre mot de passe{% endblock %}

{% block body %}
   <div class="">
       <div class="col-6 mx-auto">
            {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger mb-3 rounded" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="mt-5 mb-3 text-center">Réinitialisez votre mot de passe</h1>


             <p class="mb-3 text-center text-muted">   
                    Entrez votre adresse e-mail et nous vous enverrons un
                        lien pour réinitialiser votre mot de passe.
            </p>
                

                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                

                <button class="btn btn-success btn-block mb-5">Envoyer un e-mail de réinitialisation de mot de passe</button>
            {{ form_end(requestForm) }}
       </div>
   </div>
{% endblock %}
