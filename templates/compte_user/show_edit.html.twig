 {% extends 'compte_user/user_layouts/base.html.twig' %}


{% block title 'Article' %}

{% block body %}
	    <!-- Open Content -->
	    {{ form_start(form)}}
     <!-- Open Content -->
    <section class="bg-light">
        <div class="container pb-5">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div class="card mb-3">
                        <img class="card-img img-fluid" src="{{asset('/uploads/articles/'~imageArticles[0].imageName)}}" alt="Card image cap" id="product-detail">
                        <a class="btn btn-light" href="#" onclick="event.preventDefault(); confirm('Are you sure ?') && document.getElementById('js-pin-delete-form').submit();">Supprimer</a>
                        <form id="js-pin-delete-form" action="" method="post" style="display: none;">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token('pin_delete_'~article.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </div>
                    <div class="row">
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="prev">
                                <i class="text-dark fas fa-chevron-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </div>
                        <!--End Controls-->
                        <!--Start Carousel Wrapper-->
                        <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                            <!--Start Slides-->
                            <div class="carousel-inner product-links-wap" role="listbox">

                                <!--First slide-->
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="col-4">
                                            <a href="#">
                                                <img class="card-img img-fluid" src="{{asset('/uploads/articles/'~imageArticles[1].imageName)}}" alt="Product Image 1"> 
                                            </a>
                                            <a class="btn btn-light" href="#" onclick="event.preventDefault(); confirm('Are you sure ?') && document.getElementById('js-pin-delete-form').submit();">Supprimer</a>
                                            <form id="js-pin-delete-form" action="" method="post" style="display: none;">
                                                <input type="hidden" name="csrf_token" value="{{ csrf_token('pin_delete_'~article.id) }}">
                                                <input type="hidden" name="_method" value="DELETE">
                                            </form>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img class="card-img img-fluid" src="{{asset('/uploads/articles/'~imageArticles[2].imageName)}}" alt="Product Image 2">
                                            </a>
                                            <a class="btn btn-light" href="#" onclick="event.preventDefault(); confirm('Are you sure ?') && document.getElementById('js-pin-delete-form').submit();">Supprimer</a>
                                            <form id="js-pin-delete-form" action="" method="post" style="display: none;">
                                                <input type="hidden" name="csrf_token" value="{{ csrf_token('pin_delete_'~article.id) }}">
                                                <input type="hidden" name="_method" value="DELETE">
                                            </form>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img class="card-img img-fluid"src="{{asset('/uploads/articles/'~imageArticles[3].imageName)}}" alt="Product Image 3">
                                            </a>
                                            <a class="btn btn-light" href="#" onclick="event.preventDefault(); confirm('Are you sure ?') && document.getElementById('js-pin-delete-form').submit();">Supprimer</a>
                                            <form id="js-pin-delete-form" action="" method="post" style="display: none;">
                                                <input type="hidden" name="csrf_token" value="{{ csrf_token('pin_delete_'~article.id) }}">
                                                <input type="hidden" name="_method" value="DELETE">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!--/.First slide-->
                            </div>
                            <!--End Slides-->
                        </div>
                        <!--End Carousel Wrapper-->
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="next">
                                <i class="text-dark fas fa-chevron-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!--End Controls-->
                    </div>
                </div>
                <!-- col end -->
                <div class="col-lg-7 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h1>{{form_row(form.Nom_article)}}</h1>
                            <p class="h3 py-2">{{form_row(form.Prix_article)}}</p>
                            <p class="py-2">
                                {% for i in 1..5 %}
                                    <i class="fa fa-star 
                                        {%if loop.index <= article.etoiles %} 
                                            text-warning
                                            else  text-secondary {% endif %}"> 
                                    </i>
                                {% endfor %}
                                <span class="list-inline-item text-dark">Nombre d'etoiles</span>
                                <div>
                                    {{form_row(form.Nombre_etoiles)}}
                                </div>
                            </p>

                            <h6>{{form_row(form.Description)}}</h6>
                            <h6>{{form_row(form.Lieu_de_Vente)}}</h6>    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="col-4">
        {{form_row(form.image)}}
    </div>
    <div class="text-center">
        <p class="">Si vous venez de modifier les informations du formulaire en haut cliquez sur Mettez à jour? </p>
        <p class="">ou cliquez sur Terminer pour terminer votre creation</p>
        <input class="btn btn-light" type="submit" value="Mettez à jour" formnovalidate >
        <a href="" class="btn btn-success">Terminer</a>
    </div>
    <div class="d-flex justify-content-between col-10 text-center m-3">
         
        
    </div>
    
    {{ form_end(form)}}
    <!-- Close Content -->

    {{ include('compte_user/user_layouts/partials/_footer.html.twig') }}

    <!-- Start Script -->
    <script src="{{asset('assets/js/jquery-1.11.0.min.js')}}"></script>
    <script src="{{asset('assets/js/jquery-migrate-1.2.1.min.js')}}"></script>
    <script src="{{asset('assets/js/bootstrap.bundle.min.js')}}"></script>
    <script src="{{asset('assets/js/templatemo.js')}}"></script>
    <script src="{{asset('assets/js/custom.js')}}"></script>
    <!-- End Script -->

    <!-- Start Slider Script -->
    <script src="{{asset('assets/js/slick.min.js')}}"></script>
    <script>
        $('#carousel-related-product').slick({
            infinite: true,
            arrows: false,
            slidesToShow: 4,
            slidesToScroll: 3,
            dots: true,
            responsive: [{
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                }
            ]
        });
    </script>
    <!-- End Slider Script -->

{% endblock %}