{% extends 'compte_user/user_layouts/base.html.twig' %}


{% block title 'Modifier un utilisateur ' %}


{% block body %}
	<div class="text-center mt-3">
		<h1><a href="{{path('app_admin_user')}}" class="btn btn-success">Retour</a></h1>
	</div>
	<div class="">
		<div class="col-10 mx-auto m-5">
		<h1 class="text-center m-5">Modifier mon profil</h1>
		<div class="content">
        <div class="row">
          <div class="col-md-4">
            <div class="card card-user shadow-lg p-3 m-1 bg-white rounded">
              <div class="image">
                <img class="card-img img-fluid" src="{{asset('images/background.jpg')| imagine_filter('squared_thumbnail_profil')}}" alt="...">
              </div>
              <div class="card-body">
                <div class=" text-center">
                
                    <img src="{{(app.user.imageName ? vich_uploader_asset(app.user): asset('images/gravatar.png'))|imagine_filter('squared_thumbnail_min')}} " alt="..." class="rounded-circle shadow avatar " style="margin-top:-60px ">

                    <h5 class="title mt-3">{{app.user.firstName}} {{ app.user.lastName}} </h5>
                
                  <p class="text-info">
                    {{ app.user.email }}
                  </p>
                </div>
                <p class="description text-center mt-2">	
                	{{ app.user.aboutMe }}
                </p>
              </div>
        
            </div>
      
          </div>
          <div class="col-md-8">
            <div class="card card-user shadow-lg p-3 m-1 bg-white rounded">
              <div class="card-header">
                <h5 class="card-title">Modifier mon profil</h5>
              </div>
              <div class="card-body">
                {{ form_start(monForm) }}
         
                  <div class="row">
                    <div class="col-md-6 pr-1">
                      <div class="form-group">
                       {{form_row(monForm.firstName)}}
                      </div>
                    </div>
                    <div class="col-md-6 pl-1">
                      <div class="form-group">
                       {{form_row(monForm.lastName)}}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                       {{form_row(monForm.adresse)}}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4 pr-1">
                      <div class="form-group">
                        {{form_row(monForm.phone)}}
                      </div>
                    </div>
                     <div class="col-md-8 px-1">
                       <div class="form-group">
                        {{form_row(monForm.aboutMe)}}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                  	<div class="col-md-8 pr-1">
                  		<div class="form-group">{{ form_widget(monForm)}}</div>
                  	</div>
                  </div>
                  <div class="row">
                    <div class="update ml-auto mr-auto">
                      <input class="btn btn-primary btn-block" type="submit" value="Mettez Ã  jour" formnovalidate >
                    </div>
                  </div>
                {{ form_end(monForm) }}

              </div>
            </div>
          </div>
        </div>
      </div>

		</div>
	</div>
  
  
{% endblock %}