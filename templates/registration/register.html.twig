{% extends 'layouts/base.html.twig' %}



{% block title 'Inscription' %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="col-md-6 mx-auto m-5">

        <h1 class="m-5 text-center">Formulaire d'inscription</h1>

            {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col-6">
                    {{ form_row(registrationForm.firstName,{
                        'label': 'Pérnom'
                    }) }}
                </div>
                <div class="col-6">
                     {{ form_row(registrationForm.lastName,{
                        'label': 'Nom famille'
                        }) }}
                </div>
            </div>
            
           <div class="row">
                <div class="col-6">
                     {{ form_row(registrationForm.email) }}
                </div>
                <div class="col-6">
                    {{ form_row(registrationForm.phone,{
                        'label': 'Numéro de tél..'
                     })}}
                </div>
           </div>
           
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
          
            {{ form_row(registrationForm.adresse) }}
            
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-success btn-block" formnovalidate="">&reg;S'inscrire</button>
            <p class="mt-5 mb-4 text-center">Si vous avez deja un compte <a href="{{ path('app_login') }}">Log in</a></p>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
